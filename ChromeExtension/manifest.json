{
    "author": "Blair Conrad",
    "background": {
        "page": "background.html",
        "persistent": true
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["lookup.js"]
        }
    ],

    "description": "Use the LibraryLookup web app to look for books in local libraries.",
    "icons": {
        "16": "searching_eye_left_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },

    "manifest_version": 2,
    "name": "LibraryLookup",
    "options_page": "options.html",
    "page_action":
    {
        "default_icon": {
            "19": "searching_eye_left_19.png"
        },
        "default_title": "Library Lookup"
    },

    "permissions": [
        "activeTab",
        "http://librarylookup-hrd.appspot.com/",
        "http://localhost/"
    ],

    "version": "1.0.2015.418"
}
