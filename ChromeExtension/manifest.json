{
  "name": "Library Lookup Extension",
  "version": "1.0.2010.714",
  "description": "Use the Library Lookup web app to look for books in local libraries",
  "background_page": "background.html", 
  "page_action": 
  {
    "default_icon": "book_search.png",
    "default_title": "Library Lookup"
  },
  "content_scripts": [
   {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["lookup.js"]
    }
  ],
  "permissions": [ "tabs", "http://librarylookup.appspot.com/"]
}